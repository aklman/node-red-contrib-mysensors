{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "declaration": false,
    "listFiles": false,
    "outDir": "./dist/"
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}
